<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/split11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/title"
        android:background="#ddd">

    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/movie_extra_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="一个~电影表" />

        <RadioGroup
            android:id="@+id/rg_movie_extra_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/selector_movie_gross"
                android:button="@null"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/selector_movie_still"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/selector_movie_plot"
                android:button="@null" />
        </RadioGroup>
    </RelativeLayout>

    <View
        android:id="@+id/split1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/title"
        android:background="#ddd">

    </View>


    <LinearLayout
        android:id="@+id/movie_extraInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>


    <include layout="@layout/layout_music_comment"></include>
</LinearLayout>